<%= simple_form_for @post do |f| %>

  <div class="field" >
    <h3>Заголовок</h3>
    <%= f.input :title, label: false, class: "form-control", placeholder: "Заголовок" %>
  </div>

  <div class="field">
    <h3>Сообщение</h3>
    <%= f.input :content, as: :text, label: false, class: "form-control", placeholder: "Сообщение..." %>
  </div>
  <br />
  <div class="field">
    <%= f.input :category_id, collection: current_user.categories, label: 'Выберите категорию', class: "form-control" %>
  </div>
  <div class="field">
    <%= f.input :tag_list, as: :string, label: 'Теги', class: "form-control", placeholder: "Введите теги через запятую" %>
  </div>
  <br />
  <%= link_to 'Назад', :back, class: 'btn btn-default' %>
  <%= f.submit 'Сохранить', class: 'btn btn-success' %>

<% end %>

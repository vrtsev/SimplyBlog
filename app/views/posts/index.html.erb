<p id="notice"><%= notice %></p>

<% @posts.each do |post| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title"><%= link_to post.title, post_path(post) %></h2>
  </div>
  <div class="panel-body">
    <%= post.content %>
  </div>
<div class="panel-footer"><%= link_to "Удалить", post_path(post), method: :delete %></div>
</div>
<% end %>
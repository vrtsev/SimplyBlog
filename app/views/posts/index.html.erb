<p id="notice", style='text-align: center;'><%= notice %></p>

<% @posts.each do |post| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title"><%= link_to post.title, post_path(post) %></h2>
  </div>
  <div class="panel-body">
    <%= post.content %>
  </div>
<div class="panel-footer"><%= link_to "Комментарии", post_path(post)%> <span class="badge"><%= post.comments.count %></span>&nbsp&nbsp&nbsp  <%= post.created_at.strftime("%d.%m.%Y в %H:%M:%S") %></div>

</div>
<% end %>

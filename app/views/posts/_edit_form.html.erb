<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" >
    <h3>Заголовок</h3>
    <%= f.text_field :title, class: "form-control", placeholder: "Заголовок", size: "50x1" %>
  </div>

  <div class="field">
    <h3>Сообщение</h3>
    <%= f.text_area :content, class: "form-control", placeholder: "Сообщение...", size: "50x5" %>
  </div>
  <br />
  <p class='btn btn-default'><%= link_to 'Отмена', post_path(@post) %></p>   <%= button_to "Изменить", { action: "update" }, remote: true, form: { "data-type" => "json" }, class: 'btn btn-warning' %><br /><%= link_to "Удалить", post_path(@post) , method: :delete, data: { confirm: "Вы уверены?" }, class: 'btn btn-danger' %>
  
<% end %>
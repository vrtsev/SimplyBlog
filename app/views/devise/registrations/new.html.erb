<title><%= "Регистрация | SimplyBlog by Vadim" %></title>

<div class="panel panel-default">
  <div class="panel-body">

    <h2>Регистрация нового пользователя</h2>
    <hr>

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-9">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="field">
            <h3>Ваше имя</h3>
            <%= f.text_field :nickname, autofocus: true, class: "form-control", size: "50x1" %>
          </div>

          <div class="field">
            <h3>E-mail</h3>
            <%= f.email_field :email, class: "form-control", placeholder: "example@mail.com", size: "50x1" %>
          </div>

          <div class="field">
            <h3>Пароль</h3>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> символов минимум)</em>
              <br />
              <%= f.password_field :password, autocomplete: "off",class: "form-control", placeholder: "Пароль...", size: "50x1" %>
          </div>

          <div class="field">
            <h3>Подтверждение пароля</h3>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Повторный пароль...", size: "50x1" %>
          </div>
          <% end %>
          <br />

          <div class="actions">
            <p class='btn btn-default'><%= link_to 'Отмена', root_path %></p>
            <%= f.submit "Зарегистрироваться", class: 'btn btn-success'%>
          </div>
          <br />

          Есть аккаунт? <%= render "devise/shared/links" %>
          <br />
          
        <% end %>

      </div>
      <div class="col-md-3"></div>
    </div>

  </div>
</div>

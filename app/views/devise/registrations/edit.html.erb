<title><%= "Профиль | SimplyBlog" %></title>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">

    <div class="panel panel-default">
      <div class="panel-body">

        <h2>Редактирование профиля</h2>
        <hr>

        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-9">

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :name, required: true, autofocus: true, label: 'Ваше имя' %>
                <%= f.input :email, required: true %>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>

                <%= f.input :password, autocomplete: "off", hint: "оставьте поле пустым, если не хотите менять пароль", required: false %>
                <%= f.input :password_confirmation, required: false %>
                <%= f.input :current_password, hint: "необходим текущий пароль для подтверждения изменений", required: true %>
                <%= f.input :photo, label: 'Ссылка на фото' %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Сохранить" %>
              </div>
            <% end %>


          </div>
          <div class="col-md-3"></div>
        </div>

      </div>
    </div>

  </div>
  <div class="col-md-3"></div>
</div>
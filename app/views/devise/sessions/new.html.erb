<div class="panel panel-default">
  <div class="panel-body">


    <h2>Вход в учетную запись</h2>

    <hr>

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-9">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <h3>E-mail</h3>
            <%= f.input :email, label: false, autofocus: true, class: "form-control", placeholder: "example@mail.com" %>
          </div>

          <div class="field">
            <h3>Пароль</h3>
            <%= f.input :password, label: false, autocomplete: "off", class: "form-control", placeholder: "Пароль..." %>
          </div>

          <br />

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label "Запомнить меня" %>
            </div>
          <% end %>

          <br />

          <%= render "devise/shared/links" %>

          <br />

          <div class="actions">
            <p class='btn btn-default'><%= link_to 'Отмена', root_path %></p> &nbsp <%= button_to "Войти", { action: "create" }, remote: true, form: { "data-type" => "json" }, class: 'btn btn-success' %>
          </div>
          <br />
        <% end %>
      </div>
      <div class="col-md-3"></div>

    </div>

  </div>
</div>
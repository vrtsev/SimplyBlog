<ol class="breadcrumb">
  <li><a href="/">SimpleBlog</a></li>
  <li><a href="/admins/index">Админ-панель</a></li>
  <li class="active">Публикации</li>
</ol>


<div class="panel panel-default">
  <div class="panel-heading"> Все публикации на сайте </div>
  <div class="panel-body">


		<table class="table table-striped">
		  <tr>
			  <th >id</th>
			  <th >Заголовок</th>
			  <th >Лайков</th>
			  <th >Автор</th>
			  <th >Создан</th>
			  <th >Обновлен</th>
			</tr>
				<tr>
		<% @posts.each do |p| %>
				<tr>
				  <td>

				  	<div class="btn-group">
						  <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= p.id %> <span class="caret"></span></button>
						    
						    <span class="sr-only">Toggle Dropdown</span>
						  </button>
						  <ul class="dropdown-menu">
						    <li><%= link_to "Просмотр", post_path(p) %></li>
						    <li><%= link_to "Редактировать", edit_post_path(p) %></li>
						    <li role="separator" class="divider"></li>
						    <li><%= link_to "Удалить", post_path(p), method: :delete, data: { confirm: "Вы уверены?" } %></li>
						  </ul>
						</div>

					</td>
				  <td><%= p.title %></td>
				  <td><%= p.likes %></td>
				  <td><%= p.user.email %></td>
				  <td><%= p.created_at.strftime("%d.%m.%Y в %H:%M:%S") %></td>
				  <td><%= p.updated_at.strftime("%d.%m.%Y в %H:%M:%S") %></td>
		<% end %>
				</tr>
		</table>


	</div>
</div>

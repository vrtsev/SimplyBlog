<p id="notice", style='text-align: center;'><%= notice %></p>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><%= @post.title %></div>
  <div class="panel-body">
    <p><%= @post.content %></p>
  </div>

  <!-- Table -->
  <table class="table">
	  <tr class="info">
	  	<th><span class="glyphicon glyphicon-user" aria-hidden="true"></span> <%= link_to @post.user.email %> &nbsp&nbsp&nbsp <span class="glyphicon glyphicon-time" aria-hidden="true"></span> <%= @post.created_at.strftime("%d.%m.%Y в %H:%M:%S") %></th>
	    <th></th>
	    <th></th>
	    <th></th>
	    <th></th>
		  <% if user_signed_in? && current_user.admin %>
		    <th style='text-align: right;'><%= link_to 'Изменить', edit_post_path(@post) %> | <%= link_to "Удалить", post_path(@post), method: :delete, data: { confirm: "Вы уверены?" } %></th>
			<% else %>
				<th></th>
			<% end %>
	  </tr>
		  <% @post.comments.each do |c| %>
		  <tr>
		  	<td>&nbsp<b><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= c.user.email %></b> написал:&nbsp&nbsp&nbsp<div class="well well-sm"><%= c.content %></td></div>
		  	<td></td>
		  	<td></td>
		  	<td></td>
		    <td></td>
			  <% if user_signed_in? && current_user.admin %>
			    <td style='text-align: right;'><br /><%= link_to 'Изменить', edit_post_comment_path(@post, c) %> | <%= link_to "Удалить", post_comment_path(@post,c.id), method: :delete, data: { confirm: "Вы уверены?" } %></td>
				<% else %>
					<td></td>
				<% end %>
		  </tr>
		  <% end %>
	</table>
</div>


<%= render partial: 'posts/edit_comment_form' %>